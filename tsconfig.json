{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "packages/*/{lib,bin,bundles}",
    "packages/yarnpkg-doctor/fixtures",
    "packages/gatsby",
    "packages/yarnpkg-libzip/artifacts"
  ]
}
